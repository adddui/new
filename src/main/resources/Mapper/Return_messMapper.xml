<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.project.dao.Return_messDao">
    <!--
       namespace：对应的dao接口的全路径
       id：接口中的方法名
       parameterType：输入参数的类型
       resultType：查询返回的类型
    -->
    <select id="findAll" resultType="com.example.project.entity.Return_mess">
        select *
        from return_mess;
    </select>

    <insert id="add" parameterType="com.example.project.entity.Return_mess">
        insert into return_mess(buildTime, uid, pod, destination, startTime, endTime, temp)
        values (#{buildTime},
                #{uid},
                #{pod},
                #{destination},
                #{startTime},
                #{endTime},
                #{temp});
    </insert>

    <delete id="delete">
        delete
        from return_mess
        where id = #{id};
    </delete>
    <update id="update" parameterType="com.example.project.entity.Return_mess">
        update return_mess
        set buildTime=#{buildTime},
            uid=#{uid},
            pod=#{pod},
            destination=#{destination},
            startTime=#{startTime},
            endTime= #{endTime},
            temp=#{temp}
        where id = #{id};
    </update>

    <select id="findReturn_messById" resultType="com.example.project.entity.Return_mess">
        select *
        from return_mess
        where id = #{id};
    </select>
    <select id="findReturn_messByUid" resultType="com.example.project.entity.Return_mess">
        select *
        from return_mess
        where uid= #{uid}
        order by buildTime desc limit 1;
    </select>

</mapper>